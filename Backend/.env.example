# Copy to .env (never commit real secrets)
SPRING_PROFILES_ACTIVE=dev

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mydb
DB_USERNAME=user
DB_PASSWORD=change_me_password
DB_SSL_MODE=disable
DB_JDBC_PARAMS= # e.g. &channelBinding=require

# JPA tuning
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true

# Security / JWT
JWT_SECRET=change_me_jwt_secret
JWT_EXPIRATION=3600

# Mail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=change_me_email@example.com
MAIL_PASSWORD=change_me_mail_app_password
MAIL_TEST_CONNECTION=false

# Logging
LOG_SPRING_LEVEL=INFO
LOG_GRPC_LEVEL=INFO

# Per-service gRPC ports (override as needed)
ACTIVITY_SERVICE_GRPC_PORT=9091
USER_SERVICE_GRPC_PORT=9091
PROJECT_SERVICE_GRPC_PORT=9092
REPORT_SERVICE_GRPC_PORT=9090
MESSAGE_SERVICE_GRPC_PORT=9090
SCHEDULE_SERVICE_GRPC_PORT=9095
NOTIFICATION_SERVICE_GRPC_PORT=9094

# Cloudinary (application-service)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloud_api_key
CLOUDINARY_API_SECRET=your_cloud_api_secret

# Downstream service HTTP URLs
USER_SERVICE_HTTP_URL=http://user-service:8080

